{
  "name": "rjbackend",
  "version": "0.0.0",
  "main": "src",
  "private": true,
  "scripts": {
    "start": "node .",
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "nodemon -i \"*.test.js\" .",
    "prod": "cross-env NODE_ENV=production nodemon -i \"*.test.js\" -r dotenv-safe/config .",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown -p docs -o DOCS.md",
    "postdocs": "open-cli docs/index.html"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "devDependencies": {
    "apidoc": "^1.2.0",
    "apidoc-markdown": "^7.2.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.2",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest-cli": "^29.7.0",
    "mongodb-memory-server": "^6.3.3",
    "nock": "^12.0.2",
    "nodemon": "^3.0.2",
    "open-cli": "^7.2.0",
    "sinon": "^4.0.1",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-export-default-from": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.23.5",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.9.0",
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "bodymen": "^1.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "flutterwave-node-v3": "^1.1.6",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^5.13.21",
    "mongoose-keywords": "^0.4.0",
    "morgan": "^1.9.1",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "querymen": "^2.1.4",
    "rand-token": "^0.4.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5"
  }
}
